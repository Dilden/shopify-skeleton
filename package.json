  "bugs": {
    "url": "https://github.com/Dilden/shopify-skeleton/issues"
  },
  "homepage": "https://github.com/Dilden/shopify-skeleton#readme",
  "devDependencies": {
    "@shopify/prettier-plugin-liquid": "^1.7.2",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^3.0.0"
  }
}
