<footer class="flex flex-col md:flex-row text-center gap-8 md:gap-0 justify-evenly mt-4 mb-16">
  <p class="basis-full lg:basis-1/3">this will be my sticky footer</p>

  <nav
    class="basis-full lg:basis-1/3"
  >
    <ul class="grid grid-cols-2 md:grid-cols-3 w-auto gap-4">
      {%- if linklists.footer.size > 0  -%}
        {%- for link in linklists.footer.links -%}
          <li>
            <a href="{{ link.url }}" class="">{{ link.title }}</a>
          </li>
        {% endfor %}
      {%- endif -%}
      </ul>
  </nav>
  <p class="basis-full lg:basis-1/3">this will be my sticky footer</p>
</footer>
