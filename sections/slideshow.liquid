
<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>

{% assign slides = 'slide1.jpeg, slide2.jpeg, slide3.jpeg' | split: ', ' %}

<div class="slider overflow-hidden w-full h-96 relative text-center">
  <div class="slide_container flex flex-nowrap overflow-scroll scroll-smooth flex-row transition-all">
    
    {%- assign count = 1 -%}
    {%- for slide in slides -%} 
        <img src={{ slide | prepend: 'assets/' }} class="w-auto slide shrink-0 object-center" data-position={{count}}/>
        {% assign count = count | plus:1 %}
    {%- endfor -%}
  </div>

    <div class="bottom-0 mx-auto absolute flex text-blue-200 flex-row justify-between w-full gap-4 mb-2">
      <button id="slider_prev" class="w-6 rotate-90">
        {{- 'icon-caret.svg' | inline_asset_content -}}
      </button>
      <button id="slider_pause" class="w-6">
        {% comment %} {{- 'icon-play.svg' | inline_asset_content -}} {% endcomment %}
        {{- 'icon-pause.svg' | inline_asset_content -}}
      </button>
      <button id="slider_next" class="w-6 rotate-[-90deg]">
        {{- 'icon-caret.svg' | inline_asset_content -}}
      </button>
    </div>
</div>
